<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:orientation="horizontal"
              android:background="#FFFFFF"
              android:id="@+id/list_element">

    <ImageView
            android:layout_width="440dp"
            android:layout_height="80dp" app:srcCompat="@drawable/ic_chill" android:id="@+id/group"
            android:layout_weight="4" android:padding="5dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1">
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/title" android:layout_weight="2.3"
                android:textSize="20sp" android:textAlignment="textStart"
                android:padding="8dp"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="5">
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/time" android:layout_weight="1"
                    android:textSize="16sp" android:textStyle="bold" android:textAlignment="center"
                    android:foregroundGravity="top" android:paddingTop="20dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/date" android:layout_weight="1"
                    android:textSize="16sp" android:textStyle="bold" android:textAlignment="center"
            />
        </LinearLayout>
    </LinearLayout>
    <ImageView
            android:layout_width="440dp"
            android:layout_height="80dp" android:id="@+id/priority"
            android:layout_weight="4"/>
</LinearLayout>
